<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TS.AppPages.ShoppingListApp.Pages.EditList"
             x:Name="EditListPage"
             Title=""
             FlowDirection="RightToLeft"
             NavigationPage.HasNavigationBar="True">

    <VerticalStackLayout Padding="16" Spacing="12">

        <!-- List name -->
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalOptions="Center">
            <Label Text="שם הרשימה:"
                   FontSize="18"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="{AppThemeBinding Light=#000, Dark=#FFF}" />
            <Entry Grid.Column="1"
                   Text="{Binding ListItem.Name, Mode=TwoWay}"
                   FontSize="18"
                   Placeholder="שם רשימה"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Start"
                   VerticalOptions="Center"
                   FlowDirection="RightToLeft" />
        </Grid>

        <!-- Add item row -->
        <Grid ColumnDefinitions="*,Auto">
            <Entry Placeholder="הוסף פריט..."
                   FontSize="16"
                   Text="{Binding NewItemText, Mode=TwoWay}" />
            <Button Grid.Column="1"
                    Text="הוסף"
                    Command="{Binding AddItemCommand}" />
        </Grid>

        <!-- Checklist -->
        <CollectionView ItemsSource="{Binding ListItem.Items}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <Label Text="אין פריטים עדיין" Opacity="0.6" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <!-- Swipe to delete -->
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="מחק"
                                           BackgroundColor="IndianRed"
                                           Command="{Binding BindingContext.DeleteItemCommand, Source={x:Reference EditListPage}}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!-- RTL: checkbox on the right, text on the left -->
                        <Grid ColumnDefinitions="Auto,*"
                              Padding="8"
                              FlowDirection="RightToLeft">
                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                      VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Text="{Binding Text, Mode=TwoWay}"
                                   FontSize="16"
                                   Placeholder="פריט" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
