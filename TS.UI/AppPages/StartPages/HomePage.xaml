<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TS.AppPages.HomePage"
             Title=""
             FlowDirection="RightToLeft"
             Padding="24">

    <!-- Main home screen with navigation to mini-apps -->

    <ScrollView>
        <VerticalStackLayout Spacing="24">

            <!-- App title -->
            <Label Text="TS"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0" />

            <!-- Optional subtitle -->
            <Label Text=""
                   FontSize="18"
                   HorizontalTextAlignment="Center" />

            <!-- Button: open Cookbook mini-app -->
            <Button Text="ספר מתכונים"
                    FontSize="18"
                    HeightRequest="50"
                    Clicked="OnMiniApp1Clicked" />

            <!-- Button: open Shopping List mini-app -->
            <Button Text="רשימת קניות"
                    FontSize="18"
                    HeightRequest="50"
                    Clicked="OnMiniApp2Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
